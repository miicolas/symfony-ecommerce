{% extends 'base.html.twig' %}

{% block title %}{{ 'login' | trans }}{% endblock %}

{% block body %}
    <div class="min-h-[calc(100vh-4rem)] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <h1 class="text-center text-3xl font-light text-slate-900">{{ 'login' | trans }}</h1>
                <p class="mt-2 text-center text-sm text-slate-600">
                    {{ 'welcome-back'|trans }}
                </p>
            </div>

            <form method="post" class="mt-8 space-y-6" novalidate>
                {% if error %}
                    <div class="rounded-md bg-red-50 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-red-700">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="space-y-6 rounded-xl bg-white p-8 shadow-sm border border-slate-200">
                    <div>
                        <label for="inputEmail" class="block text-sm font-medium text-slate-700">
                            {{ 'email'|trans }}
                        </label>
                        <div class="mt-1 relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-slate-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                </svg>
                            </div>
                            <input type="email"
                                   value="{{ last_username }}"
                                   name="login_form[email]"
                                   id="inputEmail"
                                   class="pl-10 mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm transition-colors duration-200"
                                   required
                                   autocomplete="email"
                                   placeholder="{{ 'enter_email'|trans }}"
                                   autofocus>
                        </div>
                    </div>

                    <div>
                        <label for="inputPassword" class="block text-sm font-medium text-slate-700">
                            {{ 'password'|trans }}
                        </label>
                        <div class="mt-1 relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-slate-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <input type="password"
                                   name="login_form[password]"
                                   id="inputPassword"
                                   class="pl-10 mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm transition-colors duration-200"
                                   required
                                   autocomplete="current-password"
                                   placeholder="{{ 'enter_password'|trans }}">
                        </div>
                    </div>


                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="space-y-3">
                        <button type="submit"
                                class="w-full flex justify-center py-2.5 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-slate-900 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 transition-all duration-200">
                            {{ 'login'|trans }}
                        </button>

                        <p class="text-center text-sm">
                            <span class="text-slate-600">{{ 'dont-have-account'|trans }}</span>
                            <a href="{{ path('app_register') }}" class="font-medium text-slate-900 hover:text-slate-700">
                                {{ 'register'|trans }}
                            </a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}